{# -*- engine:django -*- #}

{% macro th(name) %}
  <th>
	<strong>{{name}}</strong>
	<hr />		
  </th>
{% endmacro %}

{% macro thead(columns) %}
  <thead>
	  <tr>
		  {% for column in columns %}
			  {{ _self.th(column) }}
		  {% endfor %}
		  {{ _self.th("Editar") }}
		  {{ _self.th("Borrar") }}	  
	</tr>
  </thead>
{% endmacro %}
